# Environment Variables for Policy-Driven Anonymity Controller
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-this

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///anonymity_controller.db
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# OPA Configuration
OPA_URL=http://localhost:8181/v1/data/anonymity/allow
OPA_SECURED=False

# Tor Configuration (if using Tor)
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=

# Proxy Configuration (optional)
HTTP_PROXY=
HTTPS_PROXY=
PROXY_USERNAME=
PROXY_PASSWORD=

# Selenium Configuration
WEBDRIVER_PATH=
SELENIUM_HEADLESS=True

# Security Settings
SESSION_TIMEOUT=3600
MAX_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/anonymity_controller.log

# Email Configuration (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ADMIN_EMAIL=
